<div class="container-fluid">
  <p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Tasks</h1>
</div>
  <nav class="navbar navbar-light bg-light">
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
<%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Start Date</th>
        <th scope="col">Due Date</th>
        <th scope="col">Finish Date</th>
        <th scope="col">Task Status</th>
        <th scope="col">Order Line</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.task_name %></td>
          <td><%= task.task_description %></td>
          <td><%= task.task_start_date %></td>
          <td><%= task.task_due_date %></td>
          <td><%= task.task_finish_date %></td>
          <td><%= task.task_status.task_status_name %></td>
          <td><%= task.order_line_id %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
