<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>Due Date</th>
      <th>Finish Date</th>
      <th>Task Status</th>
      <th>Order Line</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.task_description %></td>
        <td><%= task.task_start_date %></td>
        <td><%= task.task_due_date %></td>
        <td><%= task.task_finish_date %></td>
        <td><%= task.task_status.task_status_name %></td>
        <td><%= task.order_line_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

