<% @inquiries = Order.where(order_status_id: 1) %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h2 class="sub-header text-center">Order Inquiries</h2>
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Order Description</th>
                        <th>Order Due Date</th>
                        <th>Customer Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% @inquiries.each do |inquiry| %>
                        <tr>
                            <td><%= inquiry.order_description %></td>
                            <td><%= inquiry.order_due_date.to_formatted_s(:long_ordinal) %></td>
                            <td><%= inquiry.customer.customer_first_name %> <%= inquiry.customer.customer_last_name %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h2 class="sub-header text-center">Upcoming Due Dates</h2>
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Time</th>
                        <th>Location</th>
                        <th>Message</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>