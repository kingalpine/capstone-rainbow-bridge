<p id="notice"><%= notice %></p>

<h1>Frosting Flavors</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Frosting Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @frosting_flavors.each do |frosting_flavor| %>
      <tr>
        <td><%= frosting_flavor.frosting_name %></td>
        <td><%= link_to 'Show', frosting_flavor %></td>
        <td><%= link_to 'Edit', edit_frosting_flavor_path(frosting_flavor) %></td>
        <td><%= link_to 'Delete', frosting_flavor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

