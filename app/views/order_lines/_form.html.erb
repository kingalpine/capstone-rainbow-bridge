<%= form_with(model: order_line, local: true) do |form| %>
  <% if order_line.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order_line.errors.count, "error") %> prohibited this order_line from being saved:</h2>

      <ul>
        <% order_line.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :order_line_description %>
    <%= form.text_field :order_line_description %>
  </div>

  <div class="field">
    <%= form.label :order_line_start_date %>
    <%= form.datetime_select :order_line_start_date %>
  </div>

  <div class="field">
    <%= form.label :order_line_finish_date %>
    <%= form.datetime_select :order_line_finish_date %>
  </div>

  <div class="field">
    <%= form.label :special_order_notes %>
    <%= form.text_field :special_order_notes %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.text_field :product_id %>
  </div>

  <div class="field">
    <%= form.label :order_line_status_id %>
    <%= form.text_field :order_line_status_id %>
  </div>

  <div class="field">
    <%= form.label :order_id %>
    <%= form.text_field :order_id %>
  </div>

  <h3>Order Line Restrictions</h3>
  <div id='order_line_restrictions'>
    <%= form.fields_for :order_line_restrictions do |order_line_restriction| %>
      <%= render 'order_line_restriction_fields', :f => order_line_restriction %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add an Order Line Restriction', form, :order_line_restrictions %>
    </div>
  </div>

  <h3>Tiers</h3>
  <div id='tiers'>
    <%= form.fields_for :tiers do |tier| %>
      <%= render 'tiers', :f => tier %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add a tier', form, :tiers %>
    </div>
  </div>

  <h3>Tasks</h3>
  <div id='Tasks'>
    <%= form.fields_for :tasks do |task| %>
      <%= render 'task_fields', :f => task %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add an Order Line', form, :tasks %>
    </div>
  </div>
<hr>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
