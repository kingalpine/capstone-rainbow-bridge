<%= form_with(model: order_line_restriction, local: true) do |form| %>
  <% if order_line_restriction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order_line_restriction.errors.count, "error") %> prohibited this order_line_restriction from being saved:</h2>

      <ul>
        <% order_line_restriction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-4">
      <label>Order Content</label>
      <%= form.collection_select(:order_line_id, OrderLine.all, :id, :order_line_description, {prompt: "Select One...", selected: @order_line}, {class: "form-control"}) %>
    </div>

    <div class="form-group col-md-4">
      <label>Dietary Restriction</label>
      <%= form.collection_select(:dietary_restriction_id, DietaryRestriction.all, :id, :dietary_restriction_name, {prompt: "Select One..."}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
